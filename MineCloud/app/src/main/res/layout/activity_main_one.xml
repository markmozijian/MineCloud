<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/bg1"
    tools:context="markmo.minecloud.MainOneActivity">

    <Button
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/btn_backlogin"
        android:background="#00000000"
        android:layout_marginTop="0dp"
        android:layout_marginLeft="0dp"
        android:onClick="back"/>

    <Button
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:id="@+id/btn_refresh"
        android:background="@drawable/style_btn"
        android:text="刷新实时数据"
        android:textColor="@android:color/white"
        android:textSize="19sp"
        android:onClick="queryData"
        android:layout_marginBottom="40dp"
        android:layout_above="@+id/btn_chart"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:id="@+id/btn_moredetail"
        android:background="@drawable/style_btn"
        android:text="历史数据查询"
        android:textColor="@android:color/white"
        android:textSize="19sp"
        android:onClick="moredetail"
        android:layout_alignTop="@+id/btn_refresh"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:id="@+id/btn_chart"
        android:background="@drawable/style_btn"
        android:text="历史数据图"
        android:textColor="@android:color/white"
        android:textSize="19sp"
        android:onClick="chart"
        android:layout_marginBottom="30dp"
        android:layout_alignParentBottom="true"
         />

    <Button
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:id="@+id/btn_video"
        android:background="@drawable/style_btn"
        android:text="现场视频"
        android:textColor="@android:color/white"
        android:textSize="19sp"
        android:onClick="video"
        android:layout_alignTop="@+id/btn_chart"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/tvtunnel"
        android:layout_marginTop="40dp"

        android:textScaleX="1.5"
        android:textSize="16sp"
        android:textColor="#000000"
        android:layout_below="@+id/btn_backlogin"
        android:layout_alignRight="@+id/btn_moredetail"
        android:layout_alignEnd="@+id/btn_moredetail" />

    <TextView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/tvrock"
        android:layout_marginTop="14dp"
        android:textScaleX="1.5"
        android:textSize="16sp"
        android:textColor="#000000"
        android:layout_below="@+id/tvtunnel"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/tvgas"
        android:layout_marginTop="14dp"
        android:textScaleX="1.5"
        android:textSize="16sp"
        android:textColor="#000000"
        android:layout_below="@+id/tvrock"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/tvanchor"
        android:layout_marginTop="14dp"
        android:textScaleX="1.5"
        android:textSize="16sp"
        android:textColor="#000000"
        android:layout_below="@+id/tvgas"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />


</RelativeLayout>
