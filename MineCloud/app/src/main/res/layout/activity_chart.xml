<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="markmo.minecloud.ChartActivity">

    <com.github.mikephil.charting.charts.LineChart
        android:id="@+id/chart1"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="70dp"
        android:layout_height="60dp"
        android:id="@+id/btn_chart1"
        android:background="@drawable/style_btn"
        android:text="电磁辐射强度"
        android:textColor="@android:color/white"
        android:textSize="15sp"
        android:onClick="chart1"
        android:layout_below="@+id/imageView"
        android:layout_toRightOf="@+id/imageView"
        android:layout_toEndOf="@+id/imageView" />
    <Button
        android:layout_width="70dp"
        android:layout_height="60dp"
        android:id="@+id/btn_chart2"
        android:background="@drawable/style_btn"
        android:text="电磁辐射脉冲数"
        android:textColor="@android:color/white"
        android:textSize="15sp"
        android:onClick="chart2"
        android:layout_alignTop="@+id/btn_chart1"
        android:layout_toRightOf="@+id/btn_chart1"
        android:layout_toEndOf="@+id/btn_chart1"
        android:layout_marginLeft="10dp"/>
    <Button
        android:layout_width="70dp"
        android:layout_height="60dp"
        android:id="@+id/btn_chart3"
        android:background="@drawable/style_btn"
        android:text="钻屑量"
        android:textColor="@android:color/white"
        android:textSize="15sp"
        android:onClick="chart3"
        android:layout_alignTop="@+id/btn_chart2"
        android:layout_toRightOf="@+id/btn_chart2"
        android:layout_toEndOf="@+id/btn_chart2"
        android:layout_marginLeft="10dp"/>
    <Button
        android:layout_width="70dp"
        android:layout_height="60dp"
        android:id="@+id/btn_chart4"
        android:background="@drawable/style_btn"
        android:text="瓦斯浓度"
        android:textColor="@android:color/white"
        android:textSize="15sp"
        android:onClick="chart4"
        android:layout_alignTop="@+id/btn_chart3"
        android:layout_toRightOf="@+id/btn_chart3"
        android:layout_toEndOf="@+id/btn_chart3"
        android:layout_marginLeft="10dp"/>

    <Button
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/btn_backchart"
        android:background="#00000000"
        android:layout_marginTop="0dp"
        android:layout_marginLeft="0dp"
        android:onClick="backchart"/>

    <ImageView
        android:src="@drawable/cancelblack"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_marginTop="0dp"
        android:layout_marginLeft="0dp"
        android:id="@+id/imageView" />

</RelativeLayout>
