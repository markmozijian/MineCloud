<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/sign_bg"
    tools:context="markmo.minecloud.SignActivity">

    <EditText
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:id="@+id/etSignUsername"
        android:textColor="#ffffff"
        android:hint="用户名"
        android:textColorHint="#ffffff"
        android:background="@drawable/user"
        android:textScaleX="1.5"
        android:textSize="16sp"
        android:layout_marginTop="150dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:id="@+id/etSignPassword"
        android:inputType="textPassword"
        android:textColor="#ffffff"
        android:textColorHint="#ffffff"
        android:hint="密码"
        android:background="@drawable/user"
        android:textScaleX="1.5"
        android:textSize="16sp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:layout_marginTop="220dp"
        android:layout_alignLeft="@+id/etSignUsername"
        android:layout_alignStart="@+id/etSignUsername" />

    <EditText
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:id="@+id/etPhone"
        android:inputType="number"
        android:textColor="#ffffff"
        android:textColorHint="#ffffff"
        android:hint="手机号"
        android:background="@drawable/user"
        android:textScaleX="1.5"
        android:textSize="16sp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:layout_marginTop="290dp"
        android:layout_alignLeft="@+id/etSignUsername"
        android:layout_alignStart="@+id/etSignUsername" />

    <EditText
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:id="@+id/etVertification"
        android:inputType="number"
        android:textColor="#ffffff"
        android:textColorHint="#ffffff"
        android:hint="验证码"
        android:background="@drawable/user"
        android:textScaleX="1.5"
        android:textSize="16sp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:layout_marginTop="360dp"
        android:layout_alignLeft="@+id/etSignUsername"
        android:layout_alignStart="@+id/etSignUsername" />

    <Button
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:id="@+id/btn_sign2"
        android:background="@drawable/sign_btn2"
        android:onClick="signup"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/etVertification"
        android:layout_toLeftOf="@+id/btn_getcode"
        android:layout_toStartOf="@+id/btn_getcode" />

    <Button
        android:layout_width="70dp"
        android:layout_height="50dp"
        android:id="@+id/btn_getcode"
        android:text="获取验证码"
        android:textColor="@android:color/white"
        android:textSize="12sp"
        android:onClick="getcode"
        android:background="@drawable/getcode_btn"
        android:layout_alignTop="@+id/etVertification"
        android:layout_toRightOf="@+id/etVertification"
        android:layout_toEndOf="@+id/etVertification" />

    <Button
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/btn_cancel"
        android:background="#00000000"
        android:layout_marginTop="17dp"
        android:layout_marginLeft="10dp"
        android:onClick="back"/>

</RelativeLayout>
